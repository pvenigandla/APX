<?xml version="1.0"
    encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

<Button
    android:text="REGISTER"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/signup_submit_button"
    android:textSize="12pt"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:background="@color/colorPrimary"
    android:textColor="#ffffff" />

<EditText
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:inputType="textPassword"
android:ems="10"
android:id="@+id/signup_password2_field"
android:hint="Repeat Password"
android:layout_alignBaseline="@+id/signup_password2_label"
android:layout_alignParentLeft="true"
android:layout_marginLeft="150dp"
android:layout_alignParentRight="true"/>


    <EditText
        android:id="@+id/signup_weight_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signup_password2_field"
        android:layout_below="@+id/signup_password2_label"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Weight (pounds)"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/signup_height_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signup_height_field_label"
        android:layout_alignBottom="@+id/signup_height_field_label"
        android:layout_alignStart="@+id/signup_weight_field"
        android:ems="10"
        android:hint="Height (feet)"
        android:inputType="textPassword" />
<EditText
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:inputType="textPassword"
android:ems="10"
android:id="@+id/signup_password_field"
android:hint="Password"
android:layout_alignBaseline="@+id/signup_password_label"
android:layout_alignParentLeft="true"
android:layout_marginBottom="15dp"
android:layout_marginLeft="150dp"
android:layout_alignParentRight="true" />

<EditText
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:inputType="textEmailAddress"
android:ems="10"
android:id="@+id/signup_email_field"
android:hint="Email Address"
android:layout_alignBaseline="@+id/signup_email_label"
android:layout_alignParentLeft="true"
android:layout_marginLeft="150dp"
android:layout_marginTop="150dp"
android:layout_alignParentRight="true" />


<EditText
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:inputType="textPersonName"
android:ems="10"
android:id="@+id/signup_name_field"
android:hint="Name"
android:layout_alignBaseline="@+id/signup_name_label"
android:layout_alignParentLeft="true"
android:layout_marginLeft="150dp"
android:layout_alignParentRight="true"/>

<TextView
android:text="Sign Up"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentTop="true"
android:layout_centerHorizontal="true"
android:layout_marginTop="25dp"
android:textSize="16pt"
android:id="@+id/signup_signUpTitle" />
<TextView
android:text="Name"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/signup_signUpTitle"
android:layout_alignParentStart="true"
android:layout_marginTop="40dp"
android:layout_marginBottom="15dp"
android:textSize="8pt"
android:id="@+id/signup_name_label" />



<TextView
android:text="Email:"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="150dp"
android:layout_marginBottom="15dp"
android:textSize="8pt"
android:id="@+id/signup_email_label" />

<TextView
android:text="Password:"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/signup_email_field"
android:layout_marginTop="15dp"
android:layout_marginBottom="15dp"
android:textSize="8pt"
android:id="@+id/signup_password_label" />

<TextView
android:text="Repeat Password:"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/signup_password_field"
android:layout_marginTop="15dp"
android:layout_marginBottom="15dp"
android:textSize="8pt"
android:id="@+id/signup_password2_label" />

    <TextView
        android:id="@+id/signup_weight_field_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signup_weight_field"
        android:layout_alignBottom="@+id/signup_weight_field"
        android:layout_alignParentStart="true"
        android:text="Weight:"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/signup_height_field_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signup_weight_field_label"
        android:layout_below="@+id/signup_weight_field"
        android:layout_marginTop="22dp"
        android:text="Height:"
        android:textSize="8pt" />

<ImageView
android:layout_height="wrap_content"
android:id="@+id/imageView"
android:layout_width="250dp"
android:layout_alignParentTop="true"
android:layout_toEndOf="@+id/signup_name_label"
android:layout_above="@+id/signup_name_field" />
</RelativeLayout>